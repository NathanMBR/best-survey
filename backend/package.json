{
  "name": "best-survey-backend",
  "version": "1.0.0",
  "description": "Open-source survey service - Backend",
  "main": "./build/index.js",
  "engines": {
    "pnpm": ">=8.15",
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NathanMBR/best-survey"
  },
  "scripts": {
    "build": "swc src --out-dir build --strip-leading-paths --copy-files --ignore **/*.spec.ts",
    "start": "node --enable-source-maps .",
    "dev": "tsx --enable-source-maps --env-file=.env .",
    "test": "vitest --coverage.enabled",
    "test:unit": "vitest spec",
    "test:int": "vitest test",
    "test:ci": "vitest --reporter=verbose"
  },
  "keywords": [
    "backend",
    "survey",
    "node",
    "typescript"
  ],
  "author": "NathanMBR",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.2",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^8.57.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
